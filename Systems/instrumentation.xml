<?xml version="1.0"?>

<!--
**********************************************************************
Specific for AN-24B
**********************************************************************
-->

<PropertyList>

  <adf>
    <name>adf</name>
    <number>0</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>1</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>2</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>3</number>
  </adf>

<!-- Left KUS730 -->
  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>0</number>
    <total-pressure>/fdm/jsbsim/systems/pitot-static/A1orA2pressure-inhg</total-pressure>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S1orE1pressure-inhg</static-pressure>
  </airspeed-indicator>

<!-- Right KUS730 -->
  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>1</number>
    <total-pressure>/systems/pitot[2]/total-pressure-inhg</total-pressure>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S2orE2pressure-inhg</static-pressure>
  </airspeed-indicator>

<!-- Left UVO-15M -->
  <altimeter>
    <name>altimeter</name>
    <number>0</number>
    <encode-mode-c type="bool">false</encode-mode-c>
    <encode-mode-s type="bool">false</encode-mode-s>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S1orE1pressure-inhg</static-pressure>
    <quantum>0</quantum>
    <tau>0</tau>
  </altimeter>

<!-- Right UVID-15 -->
  <altimeter>
    <name>altimeter</name>
    <number>1</number>
    <encode-mode-c type="bool">true</encode-mode-c>
    <encode-mode-s type="bool">false</encode-mode-s>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S2orE2pressure-inhg</static-pressure>
    <quantum>0</quantum>
    <tau>0</tau>
  </altimeter>

  <attitude-indicator>
    <name>agd-l</name>
    <number>0</number>
    <suction>an24/AGD/agd-l</suction>
  </attitude-indicator>

  <attitude-indicator>
    <name>agd-r</name>
    <number>1</number>
    <suction>an24/AGD/agd-r</suction>
  </attitude-indicator>

  <clock>
    <name>clock</name>
    <number>0</number>
  </clock>

  <clock>
    <name>clock</name>
    <number>1</number>
  </clock>

  <clock>
    <name>clock</name>
    <number>2</number>
  </clock>

  <comm-radio>
    <name>comm</name>
    <number>0</number>>
  </comm-radio>

 <comm-radio>
    <name>comm</name>
    <number>1</number>>
  </comm-radio>

  <dme>
    <name>dme</name>
    <number>0</number>
  </dme>

  <marker-beacon>
    <name>marker-beacon</name>
    <number>0</number>
  </marker-beacon>

  <heading-indicator>
    <name>heading-indicator</name>
    <number>0</number>
    <suction>/systems/vacuum/suction-inhg</suction>
  </heading-indicator>

  <heading-indicator-dg>
    <name>heading-indicator-dg</name>
    <number>0</number>
  </heading-indicator-dg>

  <heading-indicator-fg>
    <name>heading-indicator-fg</name>
    <number>0</number>
  </heading-indicator-fg>
  
  <magnetic-compass>
    <name>magnetic-compass</name>
    <number>0</number>
  </magnetic-compass>

  <nav-radio>
    <name>nav</name>
    <number>0</number>
  </nav-radio>

  <nav-radio>
    <name>nav</name>
    <number>1</number>
  </nav-radio>

  <radar-altimeter>
    <name>radar-altimeter</name>
    <number>0</number>
    <update-interval-sec>0.1</update-interval-sec>
  </radar-altimeter>

  <slip-skid-ball>
    <name>slip-skid-ball</name>
    <number>0</number>
  </slip-skid-ball>

  <transponder>
    <name>transponder</name>
    <number>0</number>
    <mode type="int">1</mode> <!-- 0 = Mode A, 1 = Mode C, 2 = Mode S -->
    <encoder-path type="string">instrumentation/altimeter[1]</encoder-path><!-- UVID-15, right altimeter -->
    <kt70-compatibility type="bool">0</kt70-compatibility>
  </transponder>

  <turn-indicator>
    <name>turn-indicator</name>
    <number>0</number>
  </turn-indicator>

  <vertical-speed-indicator>
    <name>vertical-speed-indicator</name>
    <number>0</number>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S1orE1pressure-inhg</static-pressure>
  </vertical-speed-indicator>

  <vertical-speed-indicator>
    <name>vertical-speed-indicator</name>
    <number>1</number>
    <static-pressure>/fdm/jsbsim/systems/pitot-static/S2orE2pressure-inhg</static-pressure>
  </vertical-speed-indicator>

</PropertyList>
